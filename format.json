{
	"operation": "Rooms",
	"status": "success",
	"rooms": [{
		"roomId" : 0,
		"host": "name"
	}] // List of rooms
}


{
	"operation": "CreateRoom",
	"clientName": "name",
}
{
	"operation": "CreateRoom",
	"clientName": "name",
	"status": "success",
}


